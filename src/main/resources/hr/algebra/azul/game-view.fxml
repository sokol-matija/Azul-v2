<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="hr.algebra.azul.controller.GameController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <top>
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <Label text="Current Player: "/>
                <Label fx:id="currentPlayerLabel"/>
            </HBox>
            <HBox fx:id="playerHandArea" spacing="5" alignment="CENTER"/>
        </VBox>
    </top>

    <center>
        <HBox spacing="20">
            <VBox spacing="10">
                <Label text="Factories"/>
                <GridPane fx:id="factoriesGrid" hgap="10" vgap="10"/>
                <Label text="Central Area"/>
                <FlowPane fx:id="centralArea" hgap="5" vgap="5"/>
            </VBox>
            <VBox spacing="10">
                <Label text="Player Boards"/>
                <GridPane fx:id="playerBoardsGrid" hgap="20" vgap="20"/>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="endTurnButton" text="End Turn" onAction="#onEndTurn"/>
            <Button fx:id="saveGameButton" text="Save Game" onAction="#onSaveGame"/>
            <Button fx:id="loadGameButton" text="Load Game" onAction="#onLoadGame"/>
        </HBox>
    </bottom>
</BorderPane>